jupyterhub:
  ingress:
    enabled: true
    hosts:
      - ${domain}

  hub:
    baseUrl: /jupyter/
    services:
      binder:
        apiToken: "${api_token}"
  proxy:
    service:
      type: NodePort
    secretToken: "${secret_token}"
  singleuser:
    memory:
       guarantee: ${mem_alloc}G
    cpu:
       guarantee: ${cpu_alloc}

# BinderHub config
config:
  BinderHub:
    url: https://${domain}/jupyter
    use_registry: false

service:
  type: NodePort
storage:
  capacity: 2G
ingress:
  enabled: true
  hosts:
    - ${domain}
  annotations:
    kubernetes.io/ingress.class: nginx
  https:
    enabled: true
    type: kube-lego
